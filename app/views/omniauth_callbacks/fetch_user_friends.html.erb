<h1>User Friends </h1>
<table>
  <tr>
    <th>select</th>
    <th>Id</th>
    <th>Name</th>
    <th>Picture</th>
    <th colspan="15"></th>
  </tr>
  <% @facebook_friends.each do |f| %>
    <tr>
      <td><%= check_box_tag f["id"], {:id => f["id"], :name => f["name"], :image => f["picture"]["data"]["url"]} %></td>
      <td><%= f["id"] %></td>
      <td><%= f["name"] %></td>
      <td><%= image_tag f["picture"]["data"]["url"]%></td>
    </tr>
  <% end %>
</table>
<p><%= link_to "share_Friends_profile", "javascript:(void)" , method: 'post', id: 'share_friends', data: { toggle: "modal", target: "#myModal" }%></p>

<p><%= link_to "Back", root_path%></p>
<div id="myModal" role="dialog">
</div>
<script type="text/javascript">
  var val = [];
  $(function(){
    $('#share_friends').on("click",function(){
      var val = [];
      $(':checkbox:checked').each(function(){
        val.push($(this).val());
      });
      //alert("values :" + val );
      $.ajax({  
         type: "POST",  
         url: "/share_user_friends_profile.js",  
         data: {total_changes: val}
     });
    });
  });
</script>




