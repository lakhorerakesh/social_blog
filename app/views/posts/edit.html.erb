<% provide(:title, 'Edit & Update') %>
<h1>Edit Post</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger">
          The form contains <%= pluralize(@post.errors.count, "error") %>.
        </div>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :image do %>
    <%= f.file_field :image %>
    <% end %>
    
    <%= f.submit %>

    <%= link_to "Back", show_my_posts_path %>
    <% end %>
  </div>
</div>



