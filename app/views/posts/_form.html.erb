<% provide(:title, 'New Post') %>
<h1>Create Post</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for @post, multiple: true do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger">
          The form contains <%= pluralize(@post.errors.count, "error") %>.
        </div>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :description %>
    <%= f.text_area :description %><br>
    
    <%= f.label :date %>
    <%= f.date_field :date %><br>

    <%= f.label :category %>
    <%= f.select :category, [ 'Social', 'Politics', 'Sports', 'Entertainment', 'Fashion','Business','Technology' ], :prompt => 'Select One' %><br>

    <%= f.label :image do %>
    <%= f.file_field :image %><br>
    <% end %>
        
    <%= f.submit %>

    <%= link_to "Back", root_path %>
    <% end %>
  </div>
</div>
