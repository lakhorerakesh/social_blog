<% provide(:title, 'Posts') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_tag(posts_path, :method => "get", id: "posts_search", remote: true) do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Category" %>
  <%= button_tag "Search", id: "search_id", type: "button"%>
  <% end %>
  </div>
</div>

<p> <%= link_to "Top voted users", top_upvoted_user_path %> </p>

<h1>All Posts</h1>
<div id="posts"><%= render 'post'%></div>
<p> <%= link_to "Back", root_path %> </p>







