<% provide(:title, 'Posts') %>
<h1 align="center">Listing Posts</h1>

<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for posts_path, method: :get, :class =>"navbar-form", id: "posts_search", remote: true, :role=>"search" do%>
      <div class="input-group add-on">
        <%= text_field_tag :search, params[:search], :class => "form-control", placeholder: "Search post via category..." %>
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div id="posts"><%= render 'post'%></div>


