<div class="container">
  <p> 
    <%= link_to "Top Voted Users", top_upvoted_user_path, class: "btn btn-info" %> 
    <%= link_to 'New Post', new_post_path, class: "btn btn-info"%>
  </p>
  <h2>Posts</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Date</th>
        <th>Category</th>
        <th colspan="7"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td>
            <%= truncate(post.description.html_safe, length: 100) %>
            <%= link_to '...Read more', post_path(post) %>
          </td>
          <td><%= post.date %></td>
          <td><%= post.category %></td>
          <td><%= pluralize(post.total_votes, "vote") %> </td>
          <td><%= pluralize(post.up_votes, "upvote") %> </td>
          <td><%= pluralize(post.down_votes, "downvote") %> </td>
          <td><%= link_to 'Show', post_path(post) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>