<div class="container">
  <h1> Posts Of <%= current_user.name%> </h1>
  <table class="table">
    <p class="navbar-right"> 
      <%= link_to "Top upvoted users", top_upvoted_user_path, class: "btn btn-info" %> 
      <%= link_to 'New Post', new_post_path, class: "btn btn-info"%>
    </p>
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Category</th>
        <th colspan="7"></th>
      </tr>
    </thead>
    <tbody>
      <% @current_user_posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.date %></td>
          <td><%= post.category %></td>
          <td><%= link_to 'show', display_post_path(post) %></td>
          <td><%= link_to "Edit", edit_post_path(post) %></td>
          <td><%= link_to "Destroy", destroy_post_path(post), 
                  method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

